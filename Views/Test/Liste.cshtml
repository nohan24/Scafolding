@{
    ViewData["Title"] = "Liste Test";
}

<h1>Liste Test</h1>

<table class="table">

    <thead>
        <tr>
            
<th>Nom</th>		
<th>Argent</th>		
<th>Id_dept</th>		
 <th>Actions</th> 		
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData["data"] as List<Test>)
        {
            <tr>
                				
<td>				
@item.Nom
				
</td>				
<td>				
@item.Argent
				
</td>				
<td>				
@item.Id_dept
				
</td>
<td>
		<a asp-action="Update" asp-controller="Test" asp-route-id="@item.Id">Modifier</a> 
		<a asp-action="Delete" asp-controller="Test" asp-route-id="@item.Id">Supprimer</a>
</td>

            </tr>
        }
    </tbody>
</table>

<form asp-action="Csv" method="get">
    <button type="submit">Télécharger CSV</button>
</form>

<div>
    <a asp-action="Create">Ajouter un nouveau Test</a>
</div>

